@import 'tailwindcss/base';
@import 'tailwindcss/components';
@import 'tailwindcss/utilities';
@import './markdown.postcss';

html,
body,
#app {
  height: 100vh;
  width: 100vw;
  margin: 0;
  padding: 0;
  @apply font-mono;
}

html.dark {
  background: #222;
}

.link {
  @apply cursor-pointer opacity-50;

  &:hover {
    @apply opacity-100;
  }
}

